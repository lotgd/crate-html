{
    "name": "lotgd/crate-html",
    "description": "Adapts the lotgd/core engine and provides a web interface to play the game.",
    "authors": [
        {
            "name": "Basilius Sauter",
            "email": "basilius.sauter@gmail.com"
        }
    ],
    "type": "lotgd-crate",
    "license": "AGPL-3.0",
    "require": {
        "php": "^8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "edwinhoksberg/octicons-php": "^1.0",
        "lotgd/core": "dev-master",
        "sensio/framework-extra-bundle": "^5.6",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "*",
        "symfony/orm-pack": "*",
        "symfony/process": "*",
        "symfony/security": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "*",
        "symfony/symfony": "^5.2",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/twig-pack": "^1.0",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/yaml": "*",
        "twig/extensions": "*"
    },
    "require-dev": {
        "lotgd/module-forest": "*",
        "lotgd/module-gender": "*",
        "lotgd/module-new-day": "*",
        "lotgd/module-res-charstats": "dev-master",
        "lotgd/module-res-fight": "*",
        "lotgd/module-scene-bundle": "*",
        "lotgd/module-village": "*",

        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "*",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*",
        "symfony/web-server-bundle": "*"
    },
    "bin": [
        "bin/console"
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "LotGD\\Crate\\WWW\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LotGD\\Crate\\WWW\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "*"
        }
    },
    "repositories": [
        {"type": "path", "url": "../*"}
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true
}
